{
  "name": "telegram-md2html",
  "version": "1.0.1",
  "description": "A smart converter for Telegram-style Markdown to Telegram-compatible HTML",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "rollup -c && npm run build:types",
    "build:types": "cp dist/index.d.ts dist/index.d.mts",
    "dev": "rollup -c -w",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:ci": "npm test -- --coverage",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "telegram",
    "markdown",
    "html",
    "converter",
    "bot",
    "messaging"
  ],
  "author": "Soumyadeep Das <soumyadeepdas765@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "rollup": "^4.9.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "telegram-md2html": "^1.0.0"
  }
}
